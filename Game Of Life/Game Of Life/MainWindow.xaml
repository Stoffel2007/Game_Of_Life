                        <Image Name="image_delete" Stretch="Fill" Source="icon_delete.png" />
                    </Button>
                </StackPanel>
                <StackPanel Width="205" Orientation="Horizontal" Margin="0, 10, 0, 0">
                    <Button Name="button_fast_rewind" ToolTip="zurückspulen (A)" IsEnabled="False" Click="button_fast_rewind_Click" Height="30" Width="30">
                        <Image Name="image_fast_rewind" Stretch="Fill" Source="icon_fast_rewind.png" />
                    </Button>
                    <Button Name="button_step_rewind" ToolTip="schrittweise zurückspülen (Shift + A)" IsEnabled="False" Click="button_step_rewind_Click" Height="30" Width="30" Margin="5, 0, 0, 0">
                        <Image Name="image_step_rewind" Stretch="Fill" Source="icon_step_rewind.png" />
                    </Button>
                    <Button Name="button_play_pause" Click="button_play_pause_Click" ToolTip="Start/Stopp (S)" IsEnabled="False" Height="30" Width="30" Margin="5, 0, 0, 0">
                        <Image Name="image_play_pause" Stretch="Fill" Source="icon_play.png" />
