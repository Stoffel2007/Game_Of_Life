                    <Button Name="button_step" ToolTip="schrittweise abspielen (Shift + S)" IsEnabled="False" Click="button_step_Click" Height="30" Width="30" Margin="5, 0, 0, 0">
                        <Image Name="image_step" Stretch="Fill" Source="icon_step.png" />
                    </Button>
                    <Button Name="button_step_forward" Click="button_step_forward_Click" ToolTip="schrittweise vorspulen (Shift + D)" IsEnabled="False" Height="30" Width="30" Margin="5, 0, 0, 0">
                        <Image Name="image_step_forward" Stretch="Fill" Source="icon_step_forward.png" />
                    </Button>
                    <Button Name="button_fast_forward" ToolTip="vorspulen (D)" IsEnabled="False" Click="button_fast_forward_Click" Height="30" Width="30" Margin="5, 0, 0, 0">
                        <Image Name="image_fast_forward" Stretch="Fill" Source="icon_fast_forward.png" />
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Width="205" Margin="0, 10, 0, 0">
                    <Button Name="button_toggle_gridlines" ToolTip="Spielfeldlinien ein-/ausblenden (Y)" Click="button_toggle_gridlines_Click" Height="95" Width="95" Padding="10">
                        <Image Name="image_toggle_gridlines" Stretch="Fill" Source="icon_gridlines.png" />
                    </Button>
                    <Button Name="button_toggle_border" ToolTip="Spielfeldgrenze ein-/ausschalten (X)" Click="button_toggle_border_Click" Height="95" Width="95" Margin="15, 0, 0, 0">
                        <Image Name="image_toggle_border" Stretch="Fill" Source="icon_border_off.png" />
                    </Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
